<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Dialog"
        parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Main"/>
    <style name="Main.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>
    <style name="Main.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Main.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Main.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:text">0</item>
    </style>

    <style name="Setting" />
    <style name="Setting.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>
    <style name="Setting.ItemMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_menu_arrow</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="Setting.ItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="Setting.ItemValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="Setting.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="List" />
    <style name="List.ItemWeek">
        <item name="android:layout_width">@dimen/item_week_width</item>
        <item name="android:layout_height">@dimen/item_week_width</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="List.ItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Add" />
    <style name="Add.DateLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/date_bg</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>
    <style name="Add.DateValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Add.DateHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_very_small</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="Add.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:drawableRight">@drawable/checkbox_selector</item>
        <item name="android:button">@null</item>
    </style>
    <style name="Add.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_cyan</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="WagesDetailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="QueryTypeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_height_small</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
